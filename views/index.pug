extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 #{title}
      p.lead.text-light
        | #{description}
  article.grid-container.portfolio-index
    div.grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each article, idx in projects
        div.cell
          if (article.stars > 0)
              span.stars #{article.stars}
          a(href=`/project/${article.id}`)
            img.thumbnail(src=article.image_urls.thumb, width=200, height=200)
            h5 #{article.project_name}