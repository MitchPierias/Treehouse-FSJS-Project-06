extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1 #{name}
        p.lead.text-light
          | #{position||'Full Stack JavaScript Developer'}.
        .portfolio-bio
          p #{pitch||description||summary}
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Skills
        ul
          each skill in projects.map(proj => proj.technologies.join(', ')).filter((v,i,arr) => arr.indexOf(v)===i)
            li #{skill}
        h6 Contact Info

        //- Add your own contact info
        ul
          li #{phone}
          li #{email}
        each link, platform in social
          a.button.expanded(href=link) #{platform}
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  